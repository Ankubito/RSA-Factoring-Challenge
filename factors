#!/bin/bash
# Read numbers from file and print their factorizations

factorize() {
    local numb=$1
    local factors=$(factor $numb)
    echo "$numb=${factors##* }"
}

process_file() {
    local file=$1
    while read -r numb; do
        factorize "$numb"
    done < "$file"
}

if [[ $# -eq 1 ]]; then
    if [[ -f $1 ]]; then
    else
        echo "Error: File '$1' not found." >&2
        exit 1
    fi
else
    echo "Usage: $0 <file>" >&2
    exit 1
fi
