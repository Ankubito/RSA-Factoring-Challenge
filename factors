#!/usr/bin/bash

file=$1
while read NUM;
do
        factors=($(factor $NUMB))
        echo "$NUM=$(($NUM/${factors[1]}))*${factors[1]}"
done < $file


#!/usr/bin/env bash

file=$1

if [[ -z "$file" || ! -f "$file" ]]; then
    echo "Usage: $0 tests/test00"
    echo "Provided a valid file as an argument."
    exit 1
fi

while IFS= read -r num; do
    read -ra factors <<< "$(factor "$num")"
    m_factor=${factors[1]}
    if [[ -n "$m_factor" ]]; then
        quotient=$(($num / $m_factor))
        echo "${num}=${quotient}*${m_factor}"
    else
        echo "Error: Fails factor $num"
    fi
done < "$file"
